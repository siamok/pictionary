<%= form_with model: [@pin, @pin.ratings.build] do |form| %>
    <div class="form-group mx-sm-3 mb-2">
        <%= form.label :rating, class: "sr-only" %>
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <%= form.text_field :rating, class: "form-control", placeholder: "Rate 0-10" %>
    </div>
        <%= form.hidden_field :pin_id, value: @pin.id %>
        <%= form.hidden_field :user_id, value: current_user.id %>
    <br/>
    <%= form.submit "Rate!", class: "btn btn-primary mb-1" %>
<% end %>
