<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-offset-2 cold-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center"><%= image_tag(@pin.image) %></div>
      <div class="panel-body">
        <%= @pin.description %><br/>
        <br/><b>@<%= @pin.user.name %></b><br/>
        <%= render 'ratings/index' %> <br/>
        <% if @pin.user_id == current_user&.id %>
          <%= link_to 'Edit', edit_pin_path(@pin), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Delete', @pin, method: :delete, data: {confirm: 'Are you sure?'},  class: 'btn btn-primary btn-sm' %>
        <% end %>
      </div>
    </div>
<%= render 'pins/shared/back_btn' %>
