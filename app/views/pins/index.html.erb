<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading"><h2>Pins</h2></div>
    <div class="panel-body">

    <div class="container">
      <div class="row">
      <div class="col"><h5><b>Description</b></h5></div>
      </div>
      <% @pins.each do |pin| %>
        <div class="row">
          <div class="col-md-3 p-3"><%= pin.description %></div>
          <div class="col-md-3 p-3"><%= image_tag(pin.image, :size => "50x50") %></div>
          <div class="col-md-1"><%= link_to 'Show', pin, class: 'btn btn-default' %></div>
          <% if pin.user_id == current_user&.id %>
            <div class="col-md-1"><%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-info' %></div>
            <div class="col-md-1"><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></div>
          <% end %>
        </div>
      <% end %>
    </div>
    
  <br>

  <%= link_to 'New Pin', new_pin_path, class: 'btn btn-primary' %>
  </div>
</div>